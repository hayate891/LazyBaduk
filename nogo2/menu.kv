
<MenuDropDown>:
    scroll_distance: dp(2)
    scroll_timeout: 25
    auto_width: False
    width: dp(150)
    opacity: 1. - root.anim_progress
    canvas.before:
        PushMatrix:
        Translate:
            x: root.anim_progress * root.shift
            y: root.anim_progress * 0.5 * root.shift
    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: 0, 0
            size: self.size
    canvas.after:
        PopMatrix:
                

<DropDownButton>:
    background_normal: 0.9, 0.9, 0.9, 1
    background_down: (0.2, 0.6431, 0.8078, 1.)
    color: 0.1, 0.1, 0.1, 1
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Line:
            rectangle: self.x + dp(0.55), self.y + dp(0.55), self.width - dp(1.1), self.height - dp(1.1)
            width: dp(1.1)

